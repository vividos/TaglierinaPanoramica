<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaglierinaPanoramica.App">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Common colors and brushes -->
            <Color x:Key="PrimaryColor">#29ccbf</Color>
            <Color x:Key="PrimaryDarkColor">#1c8c83</Color>
            <Color x:Key="AccentColor">#2988cc</Color>
            <Color x:Key="TextColor">#fae6e8</Color>

            <SolidColorBrush x:Key="PrimaryColorBrush" Color="{StaticResource PrimaryColor}" />
            <SolidColorBrush x:Key="PrimaryDarkColorBrush" Color="{StaticResource PrimaryDarkColor}" />

        </ResourceDictionary>

    </Application.Resources>
</Application>
